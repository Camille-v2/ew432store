<h1><%= @product.name %></h1>

<p><%= @product.price %></p>
<p><%= @product.description %></p>
<p><%= @product.image %></p>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Reviews</h2>
<% render @product.reviews %>

<h2>Add a Review:</h2>
<%= render 'reviews/form' %>
