<div class="row border-bottom">
  <div class="title">
    <h1 class="display-3">Products</h1>
    <i class="fa-thin fa-ampersand"></i>
  </div>
  <div class="count">
  <div class="alert alert-info" role="alert">
    We have <%= Product.count %> products and counting!
    There are <%= @cart.length %> items in your cart.
  </div>
</div>

<div class="row gap-2 justify-content-evenly">
  <% @products.each do |product| %>
    <div class="card text-center" style="width: 18rem;">
      <%= image_tag(product.image) %>
      <div class="card-body">
        <%= link_to product.name, product, class: "card-title btn btn-outline-secondary" %>
        <p class="card-text"> $<%= product.price %></p>
        <p class="card-text"><%= product.description.truncate_words(8)%></p>
        <p class="card-text">Stock: <%= product.stock %></p>
        <%= link_to "Buy Now", buy_path(product), class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>


<div class="d-grid gap-2 col-6 mx-auto">
  <br><%= link_to "Checkout", checkout_path, class:"btn btn-outline-dark" %><br>
</div>

<style>
.count{
  text-align: center;
}
.title{
  text-align: left;
  padding-top: 5px;
  padding-left: 25px;
}
</style>



